<% title = 'Publications' %>

<div class="card-list">
    <% publications.forEach(function(publication, index){ %>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title"><%= publication.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">
                <%= publication.year %> <%= publication.conference %>
            </h6>
            <div class="collapse" id="collapsePubCard<%= index %>">
                <p class="card-text">
                    <%= publication.abstract %>
                </p>
            </div>
            <a data-toggle="collapse" href="#collapsePubCard<%= index %>" aria-expanded="false"
                aria-controls="collapsePubCard<%= index %>">
                <i class="fa fa-chevron-up pull-right"></i>
                <i class="fa fa-chevron-down pull-right"></i>
            </a>
            <a href="<%= publication.url %>" class="card-link" target="_blank"><i
                    class="ai ai-researchgate ai-2x"></i></a>
        </div>
    </div>
    <% }); %>
</div>